<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="180dp"
    android:layout_margin="10dp"
    android:background="@drawable/box_rounded_white"
    android:id="@+id/llayout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="7dp"
        tools:src="@drawable/ic_blog"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tvNamaProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nama Product"
        android:textSize="12sp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:fontFamily="sans-serif-black"/>
    <TextView
        android:id="@+id/tvHargaProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Rp. 150.000.000"
        android:textSize="12sp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:fontFamily="sans-serif-black"/>
    <TextView
        android:id="@+id/tvLokasiProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="jakarta"
        android:textSize="11sp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:fontFamily="sans-serif"/>
    <TextView
        android:id="@+id/tvPenjualProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="User Test"
        android:textSize="11sp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:fontFamily="sans-serif"/>
</LinearLayout>